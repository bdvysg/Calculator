<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="525" Width="350">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="previousOperations"
               Content=""
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Margin="0, 30, 0, 0"
               Grid.Column="3"
               Foreground="Gray"
               FontSize="20"/>
        <Label x:Name="resultLabel" 
               Content="0"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               FontSize="60" 
               Grid.ColumnSpan="4"/>
        <Button x:Name="ACButton" 
                Content="AC"
                Grid.Row="1" Click="ACButton_Click"
                Style="{StaticResource FeaturesButtonStyle}"/>
        <Button x:Name="plusMinusButton" 
                Content="+/-"
                Grid.Row="1"
                Grid.Column="1" Click="plusMinusButton_Click"
                Style="{StaticResource FeaturesButtonStyle}"/>
        <Button x:Name="percentageButton" 
                Content="%"
                Grid.Row="1"
                Grid.Column="2" Click="percentageButton_Click"
                Style="{StaticResource FeaturesButtonStyle}"/>
        <Button x:Name="divideButton" 
                Click="operationButton_CLick"
                Content="/"
                Grid.Row="1"
                Grid.Column="3"
                Style="{StaticResource OperatorButtonStyle}"/>
        <Button x:Name="sevenButton" 
                Content="7"
                Grid.Row="2" 
                Click="numberButton_Click"
                Style="{StaticResource NumbersButtonStyle}"/>
        <Button x:Name="eightButton" 
                Content="8"
                Grid.Row="2"
                Grid.Column="1"
                Click="numberButton_Click"
                Style="{StaticResource NumbersButtonStyle}"/>
        <Button x:Name="nineButton" 
                Content="9"
                Grid.Row="2"
                Grid.Column="2"
                Click="numberButton_Click"
                Style="{StaticResource NumbersButtonStyle}"/>
        <Button x:Name="multiplyButton" 
                Content="X"
                Grid.Row="2"
                Grid.Column="3"
                Click="operationButton_CLick"
                Style="{StaticResource OperatorButtonStyle}"/>
        <Button x:Name="fourButton" 
                Content="4"
                Grid.Row="3"
                Click="numberButton_Click"
                Style="{StaticResource NumbersButtonStyle}"/>
        <Button x:Name="fiveButton" 
                Content="5"
                Grid.Row="3"
                Grid.Column="1"
                Click="numberButton_Click"
                Style="{StaticResource NumbersButtonStyle}"/>
        <Button x:Name="sixButton" 
                Content="6"
                Grid.Row="3"
                Grid.Column="2"
                Click="numberButton_Click"
                Style="{StaticResource NumbersButtonStyle}"/>
        <Button x:Name="minusButton" 
                Content="-"
                Grid.Row="3"
                Grid.Column="3"
                Click="operationButton_CLick"
                Style="{StaticResource OperatorButtonStyle}"/>
        <Button x:Name="oneButton" 
                Content="1"
                Grid.Row="4"
                Click="numberButton_Click"
                Style="{StaticResource NumbersButtonStyle}"/>
        <Button x:Name="twoButton" 
                Content="2"
                Grid.Row="4"
                Grid.Column="1"
                Click="numberButton_Click"
                Style="{StaticResource NumbersButtonStyle}"/>
        <Button x:Name="threeButton" 
                Content="3"
                Grid.Row="4"
                Grid.Column="2"
                Click="numberButton_Click"
                Style="{StaticResource NumbersButtonStyle}"/>
        <Button x:Name="plusButton" 
                Content="+"
                Grid.Row="4"
                Grid.Column="3"
                Click="operationButton_CLick"
                Style="{StaticResource OperatorButtonStyle}"/>
        <Button x:Name="zeroButton" 
                Content="0"
                Grid.Row="5"
                Grid.ColumnSpan="2"
                Click="numberButton_Click"
                Style="{StaticResource NumbersButtonStyle}"/>
        <Button x:Name="dotButton" 
                Content="."
                Grid.Row="5"
                Grid.Column="2"
                Click="dotButton_Click"
                Style="{StaticResource NumbersButtonStyle}"/>
        <Button x:Name="calculateButton" 
                Content="="
                Grid.Row="5"
                Grid.Column="3" Click="calculateButton_Click"
                Style="{StaticResource OperatorButtonStyle}"/>
    </Grid>
</Window>
